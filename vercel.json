{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/assets/(.*)",
      "headers": { "cache-control": "public, max-age=31536000, immutable" },
      "continue": true
    },
    {
      "src": "/favicon.ico",
      "headers": { "cache-control": "public, max-age=3600" }
    },
    {
      "src": "/manifest.json",
      "headers": { "cache-control": "public, max-age=3600" }
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}
